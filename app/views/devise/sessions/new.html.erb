<div class="page_header">
  Log in
</div>
<div class="align_job">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :email, :class => "labelStyle" %>
      <%= f.email_field :email, :class => "fieldStyle", autofocus: true %>
    </div>

    <div class="field">
      <%= f.label :password, :class => "labelStyle" %>
      <%= f.password_field :password, :class => "fieldStyle", autocomplete: "off" %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me, :class => "fieldStyle" %>
        <%= f.label :remember_me, :class => "labelStyle" %>
      </div>
    <% end -%>

    <div class="actions">
      <%= f.submit "Log in", :class => "buttonJobSave" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
